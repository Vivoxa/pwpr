<h1 class='centre'>Businesses</h1>
<div class="container" style='margin-top:30px'>
  <% @businesses.each do |business| %>
      <div class="row">
        <div class="card">
          <h3 class="card-header"><%= business.name %></h3>

          <div class="card-block">
            <!--	<h4 class="card-title">Administration</h4>-->
            <p class="card-text">

            <div class="col-xs-12 col-md-4 col-lg-1"></div>
            <div class="col-xs-12 col-md-4 col-lg-5">
              <div class="row">
                <%= link_to 'Business details', business, class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
                <%= link_to 'Edit', edit_business_path(business), class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
                <%= link_to 'Destroy', business, {method: :delete, class: ['btn btn-sm btn-danger', 'devise-btn'], data: {confirm: 'Are you sure?'}} %>
              </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-5">
              <div class="row">
              </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-1"></div>
          </div>
          </p>
          <div class="card-footer">
          </div>
        </div>
      </div>
  <% end %>
</div>
<% link_to 'New Scheme', new_scheme_path, class: ['btn btn-sm btn-primary', 'devise-btn'] %>
