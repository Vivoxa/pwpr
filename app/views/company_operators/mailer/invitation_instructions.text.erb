<%= "Hello #{@resource.first_name.capitalize}"  %>
<% @inviter_user = Object.const_get(@resource.invited_by_type).find(@resource.invited_by_id) %>

<%= "#{@inviter_user.first_name.capitalize} #{@inviter_user.last_name.capitalize} from business: #{@resource.business.name.capitalize} and Scheme: #{@resource.business.scheme.name.capitalize} has invited you
to open an account on pwpr.com, a cloud based solution that #{@resource.business.name.capitalize} uses to process the company's Packaging Waste Recycling Responsibilities." %>

<%= accept_invitation_url(@resource, :invitation_token => @token) %>

<% if @resource.invitation_due_at %>
    <%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@resource.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %>
<% end %>

<%= strip_tags t("devise.mailer.invitation_instructions.ignore") %>
