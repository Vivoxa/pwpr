<div id="main-container" class="container">
  <%= render partial: './partials/users/show', locals: {user: @company_operator} %>
  <% if can? :edit, @company_operator %>
      <%= link_to 'Edit', edit_company_operator_path(params[:id]), class: ['btn btn-sm btn-primary', 'show-btn-md'] %>
  <% end %>
  <% if can? :permissions, @company_operator %>
      <%= link_to 'Permissions', company_operator_permissions_path(company_operator_id: params[:id]), class: ['btn btn-sm btn-primary', 'show-btn-md'] %>
  <% end %>
  <%= link_to 'Back', company_operators_path, class: ['btn btn-sm btn-success', 'show-btn-md'] %>
</div>
