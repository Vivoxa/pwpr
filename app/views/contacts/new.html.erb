<div id="main-container" class="container">
  <div class="card">
    <h3 class="card-header">
      <center>New Contact</center>
    </h3>
    <div class="card-block">
      <p class="card-text">
        <% if can? :new, Contact %>
          <%= render 'form' %>
        <% end %>
      </p>
    </div>
    <div class="card-footer">
      <%= link_to 'Contacts List', business_contacts_path, class: ['btn btn-sm btn-outline-primary', 'show-btn-lg'] %>
    </div>
  </div>
</div>
