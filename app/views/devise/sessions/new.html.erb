<% title "Sign in" %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "devise-lgn", autofocus: true, placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "devise-lgn", autocomplete: "off", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: ["btn", "btn-primary", "devise-btn"] %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
