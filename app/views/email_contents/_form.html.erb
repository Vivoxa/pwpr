<div class="container" style='margin-top:30px'>
  <div class="row">
    <div class="card">
      <div class="card-block">
        <div class="col-xs-12 col-md-2 col-lg-12">

          <%= form_for(@email_content) do |f| %>
              <% if @email_content.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@email_content.errors.count, "error") %> prohibited this email_content from being
                      saved:</h2>

                    <ul>
                      <% @email_content.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>
              <div class="row">
                <div class="col-xs-12 col-md-2 col-lg-6">
                  <div class="field">
                    <%= f.label :scheme_id %><br>
                    <%= f.collection_select :scheme_id, @current_user.schemes.where(active: true).order(:name), :id, :name, {}, {class: "devise-lgn form-control"} %>
                  </div>
                </div>
                <div class="col-xs-12 col-md-2 col-lg-6">
                  <% if current_admin %>
                      <div class="field">
                        <%= f.collection_select :email_content_type_id, EmailContentType.all, :id, :name,{} %>
                      </div>
                  <% else %>
                      <div class="field">
                        <%= f.hidden_field :email_content_type_id, value: EmailContentType.id_from_setting('scheme') %>
                      </div>
                  <% end %>
                  <div class="field">
                    <%= f.label :email_name_id %><br>
                    <%= f.collection_select :email_name_id, EmailName.all.order(:name), :id, :name, {}, {class: "devise-lgn form-control"} %>
                  </div>
                </div>
              </div>

              <div class="field">
                <%= f.label :intro %><br>
                <%= f.text_field :intro, placeholder: 'Dear Mr Smith', style: "min-width:800px" %>
              </div>
              <div class="field">
                <%= f.label :title %><br>
                <strong><%= f.text_field :title, placeholder: 'Title', style: "min-width:800px" %></strong>
              </div>
              <div class="field">
                <%= f.label :body %><br>
                <%= f.text_area :body, placeholder: 'Body', size: "130x30" %>
              </div>
              <div class="field">
                <%= f.label :address %><br>
                <%= f.text_area :address, placeholder: 'Address and contact details', size: "30x10" %>
              </div>
              <div class="field">
                <%= f.label :footer %><br>
                <%= f.text_field :footer, placeholder: 'Please reply to my-email@address.com', style: "min-width:800px" %>
              </div>
              <div class="action">
                <%= f.submit class: 'btn btn-primary devise-btn' %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>