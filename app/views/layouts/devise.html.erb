<!DOCTYPE html>
<html>
  <head>
    <title>PpPwpr</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container-fluid">
      <header>
        <%= render 'layouts/auth_nav_links' %>
      </header>

      <nav class="navbar navbar-dark navbar-fixed-top bg-inverse">
        <a class="navbar-brand" href=<%= root_path %>><%= image_tag("leaf1.png", size: "28x28", :alt => "company logo") %></a>

        <ul class="nav navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href=<%= root_path %>>Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <div class="btn-group">
              <%- if controller_name != 'sessions' %>
                <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-primary btn-sm" %>
              <% end -%>
            </div>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">About Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">What we do</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Contact Us</a>
          </li>
        </ul>
      </nav>
    </div>

    <div class="col-md-3" style="min-height:500px" ></div>
    <div class="col-md-6" style="min-height:500px" >
      <h1 style="text-align:center"><%= content_for :title  %></h1>
      <div class="col-md-2" style="min-height:500px"></div>
      <div class="col-md-8"style="margin-top:40px">
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
      <div class="col-md-2" style="min-height:500px"></div>
    </div>

    <div class="col-md-3" style="min-height:500px" ></div>
  </body>
</html>
