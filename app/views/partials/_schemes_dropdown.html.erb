<% if current_admin || current_scheme_operator %>
  <li class="nav-item">
    <div class="btn-group">
      <a class="btn btn-outline-secondary btn-sm" href=<%= schemes_path %>>Schemes</a>
      <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" id="schemes" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="sr-only">Toggle Dropdown</span>
      </button>
      <div class="dropdown-menu">
        <% @current_user.schemes.each do |scheme| %>
          <a class="dropdown-item" href=<%= scheme_path(scheme) %>><%= scheme.name %></a>
        <% end %>
      </div>
    </div>
  </li>
<% end %>
