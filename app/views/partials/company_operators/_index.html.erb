<div id="main-container" class="container">
    <h3>Company Operators</h3>
    <div class="row">
        <div class="card">
            <div class="card-header">
                <%= render partial: tab_partial %>
            </div>
            <div class="card-block" style='min-height:500px'>
                <h4 class="card-title"></h4>
                <%- @company_operators.each do |user| %>
                <div class="card card-block card-outline-success" style='height:150px'>
                    <div class="row">
                        <div class="col-md-1">
                            <strong>Name</strong>
                        </div>
                        <div class="col-md-4">
                            <strong>Email</strong>
                        </div>
                        <div class="col-md-2">
                            <strong>Business</strong>
                        </div>
                        <div class="col-md-2">
                            <strong></strong>
                        </div>
                        <div class="col-md-3"></div>
                    </div>
                    <div class="row">
                        <div class="col-md-1"><%= user.name.to_s if user.name %></div>
                        <div class="col-md-4"><%= user.email.to_s %></div>
                        <div class="col-md-2">
                          <%= current_admin ? 'N/A for Admin' : user.business.name %>
                        </div>
                        <div class="col-md-2"></div>
                        <div class="col-md-1"></div>
                        <div class="col-md-2">
                            <div class="row">
                                <% if can? :permissions, user %>
                                    <%= link_to 'Permissions', company_operator_permissions_path(company_operator_id: user.id), class: ['btn btn-sm btn-primary', 'show-btn-md'] %>
                                <% end %>
                            </div>
                            <div class="row">
                                <% if can? :read, user %>
                                <%= link_to 'Details', user, class: ['btn btn-sm btn-info', 'show-btn-md'] %>
                                <% end %>
                            </div>
                            <div class="row">
                                <% if can? :destroy, user %>
                                <%= link_to 'Destroy', user,{ method: :delete, class: ['btn btn-sm btn-danger', 'show-btn-md'], data: { confirm: 'Are you sure?' }} %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
                <%- end %>



            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>
