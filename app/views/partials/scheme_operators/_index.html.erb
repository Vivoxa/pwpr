<div id="main-container" class="container">
  <h3>Scheme Operators</h3>

  <div class="row">
    <div class="card">
      <div class="card-header">
        <%= render partial: tab_partial %>
      </div>
      <div class="card-block" style='min-height:500px'>
        <h4 class="card-title"></h4>
        <%- @scheme_operators.each do |user| %>
            <div class="card card-outline-secondary">
              <div class="card-header"></div>
              <div class="card-block " style='height:150px'>
                <div class="row">
                  <div class="col-md-3">
                    <strong>Name</strong>
                  </div>
                  <div class="col-md-4">
                    <strong>Email</strong>
                  </div>
                  <div class="col-md-3">
                    <strong>Scheme</strong>
                  </div>
                  <div class="col-md-2"></div>
                </div>
                <div class="row">
                  <div class="col-md-3"><%= user.first_name.to_s if user.first_name %></div>
                  <div class="col-md-4"><%= user.email.to_s %></div>
                  <div class="col-md-3">
                    <% user.schemes.each do |s| %>
                        <div class='row'>
                          <%= s.name %>
                        </div>
                    <% end %>
                  </div>
                  <div class="col-md-2">
                    <% if tab_partial.include?('pending') && user.approved? == false %>
                        <%= link_to 'Approve', scheme_operator_approve_path(scheme_operator_id: user.id), class: ['btn btn-sm btn-success', 'show-btn-md'] %>
                    <% end %>
                  </div>
                </div>
              </div>
              <div class="card-footer">
                <% if can? :permissions, user %>
                    <%= link_to 'Permissions', scheme_operator_permissions_path(scheme_operator_id: user.id), class: ['btn btn-sm btn-primary', 'show-btn-md'] %>
                <% end %>
                <% if can? :read, user %>
                    <%= link_to 'Details', user, class: ['btn btn-sm btn-info', 'show-btn-md'] %>
                <% end %>
                <% if can? :destroy, user %>
                    <%= link_to 'Destroy', user, {method: :delete, class: ['btn btn-sm btn-danger', 'show-btn-md'], data: {confirm: 'Are you sure?'}} %>
                <% end %>
              </div>
            </div>
        <%- end %>
      </div>
      <div class="card-footer"></div>
    </div>
  </div>
</div>
