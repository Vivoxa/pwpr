<h1 class='centre'>Agency Template Uploads</h1>

<div class="container" style='margin-top:30px'>
  <% @uploads.each do |upload| %>
      <div class="row">
        <div class="card">
          <h3 class="card-header"><%= upload.filename %></h3>

          <div class="card-block">
            <!--  <h4 class="card-title">Administration</h4>-->
            <p class="card-text">

            <div class="col-xs-12 col-md-4 col-lg-1">Year: <%= upload.year %> Uploaded at: <%= upload.uploaded_at %></div>
            <div class="col-xs-12 col-md-4 col-lg-5">
              <div class="row">
                <% if can? :read, upload %>
                    <%= link_to 'Details', upload, class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
                <% end %>
              </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-5">
              <div class="row">
              Uploaded by: <%= SchemeOperator.find_by_id(upload.uploaded_by_id).email %>
              </div>
            </div>
            <div class="col-xs-12 col-md-4 col-lg-1"></div>
          </div>
          </p>
          <div class="card-footer">
          </div>
        </div>
      </div>
  <% end %>
</div>
<% if can? :new, Scheme %>
    <% link_to 'New Upload', new_scheme_agency_template_upload_path, class: ['btn btn-sm btn-primary', 'devise-btn'] %>
<% end %>
