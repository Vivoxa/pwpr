<div id="main-container" class="container">
  <div class="card">
    <h3 class="card-header"><center>Editing: <%= @scheme.name %></center></h3>
    <div class="card-block">
      <div class='col-md-4'></div>
      <div class='col-md-4'>
        <p class="card-text">
          <% if can? :edit, Scheme %>
              <%= render 'form' %>
          <% else %>
            <p class="card-title">Scheme requires activating, please contact Vivoxa Ltd</p>
        <% end %>
        </p>
      </div>
      <div class='col-md-4'></div>
    </div>

    <div class="card-footer">
      <%= link_to 'Back to Scheme', @scheme, class: ['btn btn-sm btn-outline-primary', 'show-btn-lg'] %>
    </div>
  </div>
</div>
