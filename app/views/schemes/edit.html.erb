<div id="main-container" class="container">
  <div class="card">
    <h3 class="card-header"><strong>Editing:</strong> <%= @scheme.name %></h3>

    <div class="card-block">
      <div class='col-md-4'></div>
      <!--	<h4 class="card-title">Administration</h4>-->
      <div class='col-md-4'>
        <p class="card-text">
          <% if can? :new, Scheme %>
              <%= render 'form' %>
          <% else %>
            <p class="card-title">Scheme requires activating, please contact Vivoxa Ltd</p>
        <% end %>
        </p>
      </div>
      <div class='col-md-4'></div>
    </div>

    <div class="card-footer">
      <%= link_to 'Back', :back, class: ['btn btn-sm btn-success', 'show-btn-md'] %>
    </div>
  </div>
</div>
