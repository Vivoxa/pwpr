<h1 class='centre'>Schemes</h1>

<div class="container" style='margin-top:30px'>
  <% @schemes.each do |scheme| %>
    <div class="row">
      <div class="card">
        <h3 class="card-header"><%= scheme.name %> (<%= scheme.active ? 'active' : 'not active' %>)</h3>
        <div class="card-block">
          <!--	<h4 class="card-title">Administration</h4>-->
          <p class="card-text">

          <div class="col-xs-12 col-md-4 col-lg-1"></div>
          <div class="col-xs-12 col-md-4 col-lg-5">
            <div class="row">
              <%= link_to 'Scheme details', scheme, class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
              <%= link_to 'Edit', edit_scheme_path(scheme), class: ['btn btn-sm btn-secondary', 'devise-btn']  %>
              <%= link_to 'Destroy', scheme,{ method: :delete, class: ['btn btn-sm btn-danger', 'devise-btn'], data: { confirm: 'Are you sure?' }} %>
            </div>
          </div>
          <div class="col-xs-12 col-md-4 col-lg-5">
            <%= link_to 'Invite new Scheme Operator', new_scheme_operator_invitation_path, class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
            <%= link_to 'Invite new Company Operator', new_company_operator_invitation_path, class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
            <%= link_to 'Businesses', businesses_path, class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
            <div class="row">
            </div>
          </div>
          <div class="col-xs-12 col-md-4 col-lg-1"></div>
        </div>
          </p>
          <div class="card-footer">
          </div>
      </div>
    </div>
  <% end %>
</div>

<% link_to 'New Scheme', new_scheme_path, class: ['btn btn-sm btn-primary', 'devise-btn']  %>
