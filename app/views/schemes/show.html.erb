<div id="main-container" class="container">
  <div class="card">
    <h3 class="card-header"><%= @scheme.name %></h3>
    <% if can? :read, @scheme %>
        <div class="card-block">
          <!--	<h4 class="card-title">Administration</h4>-->
          <p class="card-text">
          <div class="col-lg-6">
            <% if can? :new, SchemeOperators::InvitationsController %>
                <%= link_to 'Invite new Scheme Operator', new_scheme_operator_invitation_path({ scheme_id: @scheme.id }),
                            class: ['btn btn-sm btn-primary', 'devise-btn'],
                            id: "#{@scheme.id}-invite_scheme_operator" %>
            <% end %>
            <% if can? :new, CompanyOperators::InvitationsController %>
                <%= link_to 'Invite new Member Contact',
                            new_company_operator_invitation_path,
                            class: ['btn btn-sm btn-primary', 'devise-btn'],
                            id: "#{@scheme.id}-invite_company_operator" %>
            <% end %>
            <div class="row">
            </div>
          </div>
          <div class="col-lg-6">
            <div class="row">
              <% if can? :new, Business %>
                  <%= link_to 'Members', businesses_path(scheme_id: @scheme.id), class: ['btn btn-sm btn-secondary', 'devise-btn'] %>
              <% end %>
              <% if can? :destroy, @scheme %>
                  <%= link_to 'Delete', @scheme, {method: :delete, class: ['btn btn-sm btn-danger', 'devise-btn'], data: {confirm: 'Are you sure?'}} %>
              <% end %>
            </div>
            <div class="row">
              <% if can? :create, ReportsController %>
                  <%= link_to 'Reports', scheme_reports_path(@scheme.id), class: ['btn btn-sm btn-success', 'devise-btn'] %>
              <% end %>
            </div>
          </div>
        </div>
        </p>
    <% else %>
        <div class="card-block">
          <p class="card-title">Scheme requires activating, please contact Vivoxa Ltd</p>
        </div>
    <% end %>

    <div class="card-footer">
      <% if can? :read, AgencyTemplateUpload %>
          <%= link_to 'Template Upload', scheme_agency_template_uploads_path(@scheme), class: ['btn btn-sm btn-primary', 'show-btn-lg'] %>
      <% end %>
      <% if can? :edit, @scheme %>
          <%= link_to 'Edit', edit_scheme_path(@scheme), class: ['btn btn-sm btn-warning', 'show-btn-md'] %>
      <% end %>
      <% if can? :destroy, @scheme %>
          <%= link_to 'Delete', @scheme, {method: :delete, class: ['btn btn-sm btn-danger', 'show-btn-md'], data: {confirm: 'Are you sure?'}} %>
      <% end %>
      <%= link_to 'Back', schemes_path, class: ['btn btn-sm btn-success', 'show-btn-md'] %>
    </div>
  </div>
</div>
